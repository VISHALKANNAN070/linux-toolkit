# Subtle Dark Mode (Grey & Blue)
use_shadow = ON
use_colors = ON

# 1. SCREEN BACKGROUND
# Standard terminal background
screen_color = (WHITE,BLACK,OFF)

# 2. DIALOG BOX
# (WHITE,BLACK,OFF) creates "Light Grey" text on Black (much softer)
dialog_color = (WHITE,BLACK,OFF)
title_color = (BLUE,BLACK,ON)
border_color = (BLUE,BLACK,OFF)

# 3. BUTTONS
# Active button = Cyan background with Black text
button_active_color = (BLACK,CYAN,ON)
button_inactive_color = (WHITE,BLACK,OFF)
button_key_active_color = (WHITE,CYAN,ON)
button_key_inactive_color = (RED,BLACK,OFF)
button_label_active_color = (BLACK,CYAN,OFF)
button_label_inactive_color = (WHITE,BLACK,OFF)

# 4. INPUT FIELDS
# Grey text, Blue borders
inputbox_color = (WHITE,BLACK,OFF)
inputbox_border_color = (BLUE,BLACK,OFF)
searchbox_color = (WHITE,BLACK,OFF)
searchbox_title_color = (BLUE,BLACK,ON)
searchbox_border_color = (BLUE,BLACK,OFF)
position_indicator_color = (RED,BLACK,ON)

# 5. MENUS
menubox_color = (WHITE,BLACK,OFF)
menubox_border_color = (BLUE,BLACK,OFF)
item_color = (WHITE,BLACK,OFF)
# Selected Item: Black Text on Cyan Bar
item_selected_color = (BLACK,CYAN,ON)

# 6. TAGS & CHECKS
tag_color = (BLUE,BLACK,ON)
tag_selected_color = (BLACK,CYAN,ON)
tag_key_color = (RED,BLACK,OFF)
tag_key_selected_color = (BLACK,CYAN,ON)
check_color = (WHITE,BLACK,OFF)
check_selected_color = (CYAN,BLACK,ON)

# 7. MISC
uarrow_color = (GREEN,BLACK,ON)
darrow_color = (GREEN,BLACK,ON)
itemhelp_color = (WHITE,BLACK,OFF)
form_active_text_color = (WHITE,CYAN,ON)
form_text_color = (CYAN,BLACK,ON)
form_item_readonly_color = (CYAN,BLACK,OFF)
gauge_color = (BLUE,BLACK,ON)
border2_color = (BLUE,BLACK,OFF)
inputbox_border2_color = (BLUE,BLACK,OFF)
searchbox_border2_color = (BLUE,BLACK,OFF)
menubox_border2_color = (BLUE,BLACK,OFF)
